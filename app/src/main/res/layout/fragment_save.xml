<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".framnet.SaveFragment">

    <LinearLayout
        android:id="@+id/linearsave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="50dp"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#E2E4E6"
            android:src="@drawable/save11">
        </ImageView>

        <TextView
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Lưu giữ các chỗ nghỉ yêu thích trong tầm tay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:text="Lưu chỗ nghỉ bạn thích khi tìm kiếm và tìm lại tất cả ở dây"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/btnsave"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#062170"
            android:text="Bắt đầu tìm kiếm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
        <TextView
            android:id="@+id/txtsave"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="25dp"
            android:textColor="#062170"
            android:textStyle="bold"
            android:text="Tạo một danh sách"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
   </LinearLayout>

</FrameLayout>