<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".framnet.AccountFragment">
    <LinearLayout
        android:orientation="vertical"
        android:background="#E1E1E1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relanhap"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo tài khoản, tận hưởng nhiều tiện ích"
                android:textColor="#062170"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <Button

                android:layout_below="@+id/signin"
                android:id="@+id/btnnhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_signin"
                android:text="ĐĂNG NHẬP"
                android:textColor="#FFFFFF"
                android:textSize="15dp"></Button>

            <Button
                android:layout_below="@+id/signin"
                android:layout_alignParentRight="true"
                android:id="@+id/btnki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_signup"
                android:text="Đăng Ký"
                android:textColor="#062170"
                android:textSize="15dp"></Button>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/lineraccou"
            android:layout_marginTop="20dp"
            android:background="@drawable/dynamic_account"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtviewaccount"
                android:textColor="#000000"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:text="name: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtviewemail"
                android:textColor="#000000"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="email: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/linerthe"
                android:layout_marginTop="20dp"
                android:background="@drawable/dynamic_account"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#000000"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_baseline_subtitles"
                    android:text="Thẻ của tôi"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:text="Phần thưởng của tôi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:background="@drawable/dynamic_account"
                android:layout_width="350dp"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#000000"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_baseline_web_24"
                    android:text="Phần thưởng của tôi"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:text="Tính năng dành cho hội viên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:background="@drawable/dynamic_account"
                android:layout_width="350dp"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#000000"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_baseline_help_outline"
                    android:text="Trung tâm hỗ trợ"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/dynamic_account">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_baseline_miscellaneous_services"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Cài đặt"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_signin"
            android:textStyle="bold"
            android:text="Log Out"
            android:id="@+id/btnout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>

</FrameLayout>